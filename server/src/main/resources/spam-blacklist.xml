<!--  Simple BlackList File /Antispam taken form  -->
<blacklist>
	<!-- # Fourth drug super regexp -->
	<pattern>(valtrex|zyrtec|\bhgh\b|ambien\b|flonase|allegra|didrex|renova\b|bontril|nexium)[\w\-_.]*\.[a-z]{2,}
	</pattern>
	<!-- Catchall regex for lsotr.xxx and lostr.xxx with or without a subdomain -->
	<pattern>[\w\-_.]+\.)?(l(so|os)tr)\.[a-z]{2,}</pattern>
	<!-- # This stops a whole slew of domain name variations relating to -->
	<pattern>(blow)[\w\-_.]*job[\w\-_.]*\.[a-z]{2,}</pattern>
	<!-- Catchall regexp for many spam sites -->
	<pattern>(buy)[\w\-_.]*online[\w\-_.]*\.[a-z]{2,}</pattern>
	<!-- Catchall regexp for many spam sites -->
	<pattern>(diet|penis)[\w\-_.]*(pills|enlargement)[\w\-_.]*\.[a-z]{2,}
	</pattern>
	<pattern>(i|la)-sonneries?[\w\-_.]*\.[a-z]{2,}</pattern>
	<!-- Super regexp for domains containing levitra, lolita, phentermine, viagra, 
		vigrx, vig-rx, zyban, valtex, xenical, adipex and meridia -->
	<pattern>(levitra|lolita|phentermine|viagra|vig-?rx|zyban|valtex|xenical|adipex|meridia\b)[\w\-_.]*\.[a-z]{2,}
	</pattern>
	<pattern>(magazine)[\w\-_.]*(finder|netfirms)[\w\-_.]*\.[a-z]{2,}
	</pattern>
	<!-- # Catchall regexp for Mike's Apartment variations -->
	<pattern>(mike)[\w\-_.]*apartment[\w\-_.]*\.[a-z]{2,}</pattern>
	<pattern>(milf)[\w\-_.]*(hunter|moms|fucking)[\w\-_.]*\.[a-z]{2,}
	</pattern>
	<!-- # Catchall regexp for a hundred online casino sites -->
	<pattern>(online)[\w\-_.]*casino[\w\-_.]*\.[a-z]{2,}</pattern>

	<word></word>
</blacklist>
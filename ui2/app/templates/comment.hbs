<article class="{{ternary flags.length 'comment-flagged' ''}} {{ternary isTrashed 'comment-trashed' ''}}">
    <div class="body-wrapper">
        <div class="avatar current-avatar">
            <img src="{{avatarUrl}}" class="silhouette"/>
        </div>
        {{#ifm isOwner}}
            <div class="avatar hidden change-avatar">
                <img data-action="uploadAvatar" alt="Change profile image" title="Change profile image" src="data:image/png;base64," class="silhouette">
            </div>
         {{/ifm}}

        <div class="comment-data">
            <header>
                <a class="pull-right hide" data-action-flag title="{{multiplicity flags.length 'Flagged %@ times' 'Flagged one time' 'Never flagged'}}.">
                    <i class="crafter-social-icon cs-icon-flag"></i>
                </a>
                {{#ifm isOwner}}
                    <a class="pull-right" data-action="trash">
                        <i class="crafter-social-fa-icon fa fa-trash-o"></i>
                    </a>
                    <a class="pull-right option" data-action="edit" title="Edit Comment">
                        <i class="crafter-social-icon cs-icon-pencil"></i>
                    </a>
                {{/ifm}}
                    <a class="pull-right reply" data-action-reply>
                        <i class="crafter-social-icon cs-icon-share-alt" title="Reply"></i>
                    </a>

                {{#mif userInfo.actions 'has' 'moderate'}}{{/mif}}
                <span class="vote-up-wrapper pull-right">
                    <span class="vote-up-count" title="{{#if votesUp}}{{votesUp.length}} {{multiplicity votesUp.length 'people like' 'person likes'}} this.{{else}}No one has liked this{{/if}}">
                        +{{votesUp.length}}
                    </span>
                {{#ifm isOwner}}
                    <a style="cursor: default" >
                        <i class="crafter-social-icon crafter-social-fa-icon fa-thumbs-up {{#mif votesUp 'has' sessionUserId}}you-voted{{/mif}}"></i>
                    </a>
                {{else}}
                    <a data-action="voteUp">
                        <i class="crafter-social-icon crafter-social-fa-icon fa-thumbs-up {{#mif votesUp 'has' sessionUserId}}you-voted{{/mif}}"></i>
                    </a>
                {{/ifm}}
                </span>
                <strong>
                    {{#if user.attributes.displayName}}
                        {{user.attributes.displayName}}
                    {{else}}
                        Anonymous
                    {{/if}}
                </strong>
                <p>{{date lastModifiedDate}}</p>
            </header>
            <section class="comment-body">
                <div class="content-wrapper">{{html body}}</div>
                <div class="editor"></div>
                <div class="edit-controls">
                    <button type="button" class="btn btn-primary btn-xs" data-action="doEdit">Update</button>
                    <button type="button" class="btn btn-default btn-xs" data-action="cancelEdit">Cancel</button>
                </div>
            </section>
            <div class="comment-attachments"></div>
        </div>
    </div>
    <footer class="comment-actions">
        <div class="clearfix">
            <ul class="list-inline list-unstyled pull-left">
                <li>
                    <span class="vote-down-wrapper hidden">
                        <a data-action="voteDown">
                            <i class="crafter-social-icon cs-icon-chevron-down"></i>
                        </a>
                        <span class="vote-down-count" title="{{#if votesDown}}{{votesDown.length}} {{multiplicity votesDown.length 'people don\'t' 'person doesn\'t'}} like this.{{else}}No one has disliked this{{/if}}">
                            -{{votesDown.length}}
                        </span>
                    </span>

                </li>
                <li class="hide">
                    <a data-action-reply><i class="crafter-social-icon cs-icon-transfer"></i> Reply ({{childCount}})</a>
                </li>
            </ul>
            {{#ifm isOwner}}
                <ul class="list-inline list-unstyled pull-left">
                    <li>
                        <a data-action="files"><i class="crafter-social-icon cs-icon-picture"></i> Upload Photo(s)  ({{attachments.length}})</a>
                    </li>
                </ul>
            {{/ifm}}
            <a class="pull-right" data-action-flag flagged-title="{{multiplicity flags.length 'Reported %@ times' 'Reported Once' 'Report'}}">
                <i class="crafter-social-icon cs-icon-flag"></i>
            </a>
        </div>
        {{#mif votesUp 'has' sessionUserId}}
            <div class="status-messages">
                You voted up <a data-action="removeVote">(undo vote)</a>
            </div>
        {{/mif}}
        {{#mif votesDown 'has' sessionUserId}}
            <div class="status-messages">
                You voted down  <a data-action="removeVote">(undo vote)</a>
            </div>
        {{/mif}}
    </footer>
    <div class="comment-body-reply">
        <div class="content-wrapper"></div>
        <div class="editor"></div>
        <div class="reply-controls">
            <p class="text-center"><span class="submission-label"></span> <span class="attachments-tip"></span></p>
            {{#if showTermsAcceptance}}
            <p>
                <input type="checkbox" name="accept" value="accept" data-action-terms>
                <span class="agree-terms-label"></span>&nbsp;(<a target="_blank" class="terms-link" href=""></a>)
            </p>
            {{/if}}
            <button type="button" 
                class="btn btn-primary btn-xs 
                {{ternary showTermsAcceptance "disabled" ""}}" 
                data-action="doReply">Reply</button>
            <button type="button" class="btn btn-default btn-xs" data-action="cancelReply">Cancel</button>
        </div>
    </div>
    <div class="comment-children"></div>
</article>

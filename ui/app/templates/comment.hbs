<article>
    <div class="body-wrapper">
        <div class="avatar">
            <img src="data:image/png;base64," class="silhouette"/>
        </div>
        <div class="comment-data">
            <header>
                <a href="#" class="pull-right" data-action-flag title="{{flagCount}} flags"><i class="crafter-social-icon cs-icon-flag"></i></a>
                <strong>{{profile.userName}}</strong> <small>{{date dateAdded}}</small>
            </header>
            <section class="comment-body">
                {{html textContent}}
            </section>
        </div>
    </div>
    <footer class="comment-actions">
        <ul class="list-inline list-unstyled pull-left">
            <li>
                <a href="#" data-action-like><i class="crafter-social-icon cs-icon-thumbs-up"></i> Like ({{likeCount}})</a>
            </li>
            <li>
                <a href="#" data-action-reply><i class="crafter-social-icon cs-icon-transfer"></i> Reply ({{childCount}})</a>
            </li>
        </ul>
        <ul class="list-inline list-unstyled pull-right">
            <li>
                <a href="#" data-action-><i class="crafter-social-icon cs-icon-upload"></i> Files (0)</a>
            </li>
        </ul>
    </footer>
    <div class="comment-children"></div>
</article>